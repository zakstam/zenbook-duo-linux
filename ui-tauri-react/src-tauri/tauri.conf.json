{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri/refs/heads/dev/crates/tauri-utils/schema.json",
  "productName": "Zenbook Duo Control",
  "version": "0.1.1",
  "identifier": "com.zenbook-duo.control",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run vite:dev",
    "beforeBuildCommand": "npm run vite:build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Zenbook Duo Control",
        "width": 960,
        "height": 640,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "decorations": true,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "tooltip": "Zenbook Duo Control"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"]
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "libappindicator-gtk3"]
      }
    }
  }
}
